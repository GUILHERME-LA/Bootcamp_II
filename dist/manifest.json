{
  "manifest_version": 3,
  "name": "Lembrete de Água para Estudos",
  "version": "1.0",
  "description": "Lembra de beber água a cada X minutos durante os estudos.",
  "permissions": ["storage", "notifications", "alarms"],
  
  "action": {
    "default_popup": "src/popup/popup.html", 
    "default_title": "Lembrete de Água"
  },
  
  "background": {
    "service_worker": "src/background/background.js"  
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
    
  }
}